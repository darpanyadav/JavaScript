<script>

    var total_bill = 799;
 
    if(total_bill > 1000)
    { 
        console.log("20 % discount"); 
        }

    else if(total_bill > 500) 
    { 
        console.log("10 % discount"); 
        }

        else if(total_bill > 300) 
    { 
        console.log("5 % discount"); 
        }    

    else 
    { 
        console.log("No discount"); 
        }

</script>